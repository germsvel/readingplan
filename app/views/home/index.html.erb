<div class='container'>
  <div class='row'>
    <span class='col-xs-1'><%= link_to 'Go to Account', user_lists_path(current_user), id: 'account-btn', class: 'btn btn-sm btn-success' %></span>
    <span class='col-xs-2 col-xs-offset-8'><%= button_to 'Sign out', '/sign_out', class: 'btn btn-sm btn-danger' %></span>
  </div>
  <div class='row'>
    <h3>Welcome <%= current_user.email %></h3>
  </div>

  <table id="reading-lists", class="table table-striped table-condensed">
  <% @bookmarks.each_with_index do |bookmark, i| %>
    <div class='row'>
      <tr class='reading-list' id="list-<%= i + 1 %>">
        <td class='small'>List <%= i+1 %></td>
        <td><h3><%= bookmark.full_name %></h3></td>
        <td><%= button_to 'Next', bookmark, method: 'patch', class: 'btn btn-lg btn-primary' %></td>
      </tr>
    </div>
  <% end %>
  </table>
</div>
