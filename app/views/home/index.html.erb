<div class='container'>

  <nav class='navbar navbar-inverse role="navigation"'>
    <div class='container'>
      <ul class='nav navbar-nav'>
        <li id='home-btn'><%= link_to 'Go to Account', user_lists_path(current_user), id: 'account-btn', class: 'pull-left' %></li>
      </ul>
      <%= button_to 'Sign out', sign_out_path, class: 'btn btn-danger navbar-btn navbar-right sign-out-btn' %>
    </div>
  </nav>
  <% if notice.present? || alert.present? %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>

  <h3 id='welcome-sign'>Welcome <%= current_user.email %></h3>

  <table id="reading-lists", class="table table-striped table-condensed">
  <% @bookmarks.each_with_index do |bookmark, i| %>
    <div class='row'>
      <tr class='reading-list' id="list-<%= i + 1 %>">
        <td class='small'>List <%= i+1 %></td>
        <td><h3><%= bookmark.full_name %></h3></td>
        <td><%= button_to 'Next', bookmark, method: 'patch', class: 'btn btn-lg btn-primary' %></td>
      </tr>
    </div>
  <% end %>
  </table>
</div>
