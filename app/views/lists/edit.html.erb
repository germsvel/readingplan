<div class='container'>
  <div> <%= link_to '<< back', user_lists_path(current_user), class: 'btn btn-sm btn-success' %> </div>
  <h3>Edit List <%= @bookmark.list_number %></h3>

  <div id='edit-list'>
    <%= form_for @bookmark, url: user_list_path(current_user, @bookmark), class: 'form form-horizontal' do |f| %>
      <div class='form-group'>
        <%= f.label :book %>
        <%= f.select :book, @list_books ,class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :chapter %>
        <%= f.text_field :chapter, class: 'form-control' %>
      </div>

        <%= f.submit 'Update', class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>
