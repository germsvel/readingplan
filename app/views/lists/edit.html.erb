<div class='container'>
  <nav class='navbar navbar-inverse role="navigation"'>
    <div class='container'>
      <ul class='nav navbar-nav'>
        <li> <%= link_to '<< back', user_lists_path(current_user), id: 'home-btn', class: 'pull-left' %> </li>
      </ul>
      <ul class='nav navbar-nav navbar-right'>
        <li id='sign-out-btn'><%= link_to 'Sign out', '/sign_out', class: 'pull-right' %></li>
      </ul>
    </div>
  </nav>
  <% if notice.present? || alert.present? %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
  <% end %>

  <h3>Edit List <%= @bookmark.list_number %></h3>

  <div id='edit-list'>
    <%= form_for @bookmark, url: user_list_path(current_user, @bookmark), class: 'form form-horizontal' do |f| %>
      <div class='form-group'>
        <%= f.label :book %>
        <%= f.select :book, @list_books ,class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :chapter %>
        <%= f.text_field :chapter, class: 'form-control' %>
      </div>

        <%= f.submit 'Update', class: 'btn btn-primary' %>
    <% end %>

  </div>
</div>
