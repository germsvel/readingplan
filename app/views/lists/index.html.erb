<div class='container'>
  <div> <%= link_to 'Home', :root , class: 'btn btn-sm btn-success'%> </div>
  <h3>Set lists</h3>

  <table id="reading-lists", class='table table-striped'>
    <% @bookmarks.each_with_index do |bookmark, i| %>
      <tr class='reading-list' id="list-<%= i + 1 %>">
        <td>List <small><%= i + 1 %></small></td>
        <td><h4><%= bookmark.full_name %></h4></td>
        <td><%= link_to 'Edit', edit_user_list_path(current_user, bookmark), class: 'btn btn-lg btn-warning' %></td>
      </tr>
    <% end %>
  </table>
</div>
